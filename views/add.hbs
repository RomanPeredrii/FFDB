<form action="/add" method="POST">
  <div class="input-field">
    <input
      id="number"
      name="number"
      type="text"
      pattern="[A-Z]{4}[0-9]{7}"
      class="validate"
      autocomplete="off"
      required
    />
    <label for="number">number XXXX0000000</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <select id="size" name="size">
      <option value="" disabled selected>20/40/45</option>
      <option value="20">20</option>
      <option value="40">40</option>
      <option value="45">45</option>
    </select>
    <label for="size">Size</label>
  </div>

  <div class="input-field">
    <select id="status" name="status">
      <option value="" disabled selected>IMP/EXP</option>
      <option value="IMP">IMP</option>
      <option value="EXP">EXP</option>
    </select>
    <label for="status">Status</label>
  </div>



  <div class="input-field">
    <input id="POL" name="POL" type="text" />
    <label for="POL">Port Of Loading</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="POD" name="POD" type="text" />
    <label for="POD">Port Of Destination</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="FD" name="FD" type="text" />
    <label for="FD">Final Destination</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="line" name="line" type="text" />
    <label for="line">Containers Line</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="vessel" name="vessel" type="text" />
    <label for="vessel">Vessel</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="weight" name="weight" type="text" />
    <label for="weigth">Weight</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="driver" name="driver" type="text" />
    <label for="driver">Diver</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="cargo" name="cargo" type="text" />
    <label for="cargo">Cargo</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <div class="input-field">
    <input id="comments" name="comments" type="text" />
    <label for="comments">Comments</label>
    <span class="helper-text" data-error="wrong" data-success="right"></span>
  </div>

  <input id="_csrf" name="_csrf" value="{{@root.csrf}}" hidden />

  <div class="row center-align">
    <button id="add" class="btn btn-primary">Add container</button>
  </div>
</form>